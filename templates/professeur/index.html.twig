{% extends 'base.html.twig' %}

{% block title %}
  Professeurs - Gestion
{% endblock %}

{% block body %}
  <section class="container-fluid px-4 py-3">
    <!-- En-t√™te de la page -->
    <header class="page-header">
      <div class="header-icon">üë®‚Äçüè´</div>
      <h1 class="header-title">Gestion des Professeurs</h1>
      <p class="header-subtitle">G√©rez les enseignants et leurs affectations p√©dagogiques</p>
    </header>

    <!-- Navigation principale -->
    <div class="nav-wrapper">
      <nav class="main-navigation" data-controller="tabs" data-tab-group="professeur" data-tabs-active-class="active">
        <a href="{{ path('professeur_show', { nomOnglet: 'new' }) }}" class="nav-tab" data-tabs-target="tab" data-tab-id="new" data-action="click->tabs#selectTab" data-turbo-frame="professeur_tray">
          <span class="nav-icon">‚ûï</span>
          <span class="nav-text">Cr√©er un professeur</span>
        </a>
        <a href="{{ path('professeur_show', { nomOnglet: 'list' }) }}" class="nav-tab" data-tabs-target="tab" data-tab-id="list" data-action="click->tabs#selectTab" data-turbo-frame="professeur_tray">
          <span class="nav-icon">üìã</span>
          <span class="nav-text">Liste des professeurs</span>
        </a>
        <a href="{{ path('professeur_show', { nomOnglet: 'assign' }) }}" class="nav-tab" data-tabs-target="tab" data-tab-id="assign" data-action="click->tabs#selectTab" data-turbo-frame="professeur_tray">
