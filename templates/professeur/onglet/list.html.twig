<turbo-frame id="professeur_tray">
  <div class="list-professeur-container" data-controller="table">
    <!-- En-t√™te de la liste -->
    <header class="display-header">
      <div class="header-icon">üìã</div>
      <h2 class="header-title">Liste des Professeurs</h2>
      <p class="header-subtitle">G√©rez tous les professeurs de votre √©tablissement</p>
    </header>

    <!-- Flash container -->
    <div id="flash-container"></div>

    {% if professeurs is empty %}
      <!-- √âtat vide -->
      <div class="empty-state">
        <div class="empty-icon">üë®‚Äçüè´</div>
        <h3 class="empty-title">Aucun professeur cr√©√©</h3>
        <p class="empty-message">Commencez par ajouter votre premier professeur pour organiser votre √©quipe p√©dagogique.</p>
        <div class="empty-action">
          <a href="{{ path('professeur_show', { nomOnglet: 'new' }) }}" 
             class="custom-btn custom-btn-primary" 
             data-turbo-frame="professeur_tray" 
             data-controller="button-hover">
            <span class="btn-icon">‚ûï</span>
            Cr√©er mon premier professeur
          </a>
        </div>
      </div>
    {% else %}
      <!-- Statistiques rapides en ligne -->
      <div class="admin-stats-container">
        <div class="admin-stats-row" data-controller="stats-counter">
          <div class="admin-stat-item" data-stats-counter-target="item">
            <div class="admin-stat-icon">üë®‚Äçüè´</div>
            <div class="admin-stat-number">{{ professeurs|length }}</div>
            <div class="admin-stat-label">Professeurs</div>
          </div>
          
          <div class="admin-stat-separator">‚Ä¢</div>
          
          <div class="admin-stat-item" data-stats-counter-target="item">
            <div class="admin-stat-icon">‚è∞</div>
            <div class="admin-stat-number">
              {% set totalHeures = 0 %}
              {% for professeur in professeurs %}
                {% set totalHeures = totalHeures + professeur.nbHeuresMax %}
              {% endfor %}
              {{ totalHeures }}
            </div>
            <div class="admin-stat-label">Heures totales</div>
          </div>
          
          <div class="admin-stat-separator">‚Ä¢</div>
          
          <div class="admin-stat-item" data-stats-counter-target="item">
            <div class="admin-stat-icon">üìö</div>
            <div class="admin-stat-number">
              {% set totalMatieres = [] %}
              {% for professeur in professeurs %}
                {% for matiere in professeur.matieres %}
                  {% if matiere.nom not in totalMatieres %}
                    {% set totalMatieres = totalMatieres|merge([matiere.nom]) %}
                  {% endif %}
                {% endfor %}
              {% endfor %}
              {{ totalMatieres|length }}
            </div>
            <div class="admin-stat-label">Mati√®res enseign√©es</div>
          </div>
        </div>
      </div>

      <!-- Container centr√© pour le tableau -->
      <div class="table-container">
        <div class="table-responsive">
          <table class="data-table">
            <thead>
              <tr>
                <th>
                  <div class="th-content">
                    <span class="th-icon">üë§</span>
                    Nom
                  </div>
                </th>
                <th>
                  <div class="th-content">
                    <span class="th-icon">üÜî</span>
                    Pr√©nom
                  </div>
                </th>
                <th>
                  <div class="th-content">
                    <span class="th-icon">‚è∞</span>
                    Heures max
                  </div>
                </th>
                <th>
                  <div class="th-content">
                    <span class="th-icon">üìö</span>
                    Mati√®res
                  </div>
                </th>
              </tr>
            </thead>
            <tbody>
              {% for professeur in professeurs %}
                <tr class="table-row" data-table-target="row">
                  <td>
                    <div class="cell-content">
                      <div class="user-info">
                        <div class="user-avatar">
                          <span class="avatar-icon">üë®‚Äçüè´</span>
                        </div>
                        <div class="user-details">
                          <div class="cell-main">{{ professeur.nom }}</div>
                          <div class="cell-meta">Professeur</div>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="cell-content">
                      <div class="cell-main">{{ professeur.prenom }}</div>
                    </div>
                  </td>
                  <td>
                    <div class="cell-content">
                      <div class="hours-badge">
                        <span class="hours-icon">‚è∞</span>
                        <span class="hours-number">{{ professeur.nbHeuresMax }}</span>
                        <span class="hours-unit">h/semaine</span>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="cell-content">
                      {% if professeur.matieres|length > 0 %}
                        <div class="matieres-list">
                          {% for matiere in professeur.matieres %}
                            <span class="matiere-tag" style="border-left-color: {{ matiere.couleur }};">
                              <span class="matiere-icon">üìñ</span>
                              {{ matiere.nom }}
                            </span>
                          {% endfor %}
                        </div>
                      {% else %}
                        <span class="no-matieres">
                          <span class="no-icon">üìù</span>
                          Aucune mati√®re assign√©e
                        </span>
                      {% endif %}
                    </div>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    {% endif %}
  </div>

  <style>
    /* Variables de couleurs */
    :root {
      --primary-dark: #01172f;
      --accent-blue: #08a4bd;
      --title-green: #00635d;
      --secondary-purple: #3b1f2b;
      --form-dark: #181a1b;
      --success-green: #28a745;
      --warning-orange: #ffc107;
      --danger-red: #dc3545;
      --input-bg: #2a2d2f;
      --input-border: #3a3d3f;
      --text-light: #ffffff;
      --text-muted: #b8bcc0;
      --background-light: #f8f9fa;
    }

    /* Container principal */
    .list-professeur-container {
      max-width: 1200px;
      margin: 0 auto;
      color: var(--text-light);
      padding: 0 1rem;
    }

    /* En-t√™te */
    .display-header {
      text-align: center;
      margin-bottom: 3rem;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid var(--title-green);
    }

    .header-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      opacity: 0.9;
      animation: float 3s ease-in-out infinite;
    }

    .header-title {
      color: var(--accent-blue);
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .header-subtitle {
      color: var(--text-muted);
      font-size: 1rem;
      margin: 0;
      line-height: 1.4;
    }

    /* Statistiques admin en ligne */
    .admin-stats-container {
      display: flex;
      justify-content: center;
      margin-bottom: 2.5rem;
      padding: 0 1rem;
    }

    .admin-stats-row {
      display: flex;
      align-items: center;
      gap: 2rem;
      padding: 1.5rem 2.5rem;
      background: rgba(42, 45, 47, 0.3);
      border: 2px solid var(--input-border);
      border-radius: 50px;
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .admin-stats-row::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(8, 164, 189, 0.1), transparent);
      transition: left 0.8s ease;
    }

    .admin-stats-row:hover {
      background: rgba(42, 45, 47, 0.4);
      border-color: var(--accent-blue);
      box-shadow: 0 8px 25px rgba(8, 164, 189, 0.15);
      transform: translateY(-2px);
    }

    .admin-stats-row:hover::before {
      left: 100%;
    }

    .admin-stat-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      min-width: 120px;
      transition: all 0.3s ease;
      position: relative;
      z-index: 1;
    }

    .admin-stat-item:hover {
      transform: translateY(-3px);
    }

    .admin-stat-icon {
      font-size: 2rem;
      margin-bottom: 0.5rem;
      opacity: 0.9;
      transition: all 0.3s ease;
    }

    .admin-stat-item:hover .admin-stat-icon {
      transform: scale(1.1);
    }

    .admin-stat-number {
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--accent-blue);
      line-height: 1;
      margin-bottom: 0.25rem;
      transition: all 0.3s ease;
    }

    .admin-stat-item:hover .admin-stat-number {
      color: var(--title-green);
      transform: scale(1.05);
    }

    .admin-stat-label {
      font-size: 0.85rem;
      color: var(--text-muted);
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      transition: color 0.3s ease;
    }

    .admin-stat-item:hover .admin-stat-label {
      color: var(--text-light);
    }

    .admin-stat-separator {
      font-size: 1.5rem;
      color: var(--input-border);
      opacity: 0.6;
      transition: all 0.3s ease;
    }

    .admin-stats-row:hover .admin-stat-separator {
      color: var(--accent-blue);
      opacity: 0.8;
    }

    /* Container du tableau */
    .table-container {
      display: flex;
      justify-content: center;
      margin-bottom: 2rem;
    }

    .table-responsive {
      width: 100%;
      max-width: 1000px;
      border-radius: 12px;
      background-color: var(--form-dark);
      border: 2px solid var(--title-green);
      box-shadow: 0 15px 35px rgba(1, 23, 47, 0.2);
      overflow: hidden;
    }

    .data-table {
      width: 100%;
      border-collapse: collapse;
      background-color: var(--form-dark);
      color: var(--text-light);
      margin: 0;
    }

    .data-table thead th {
      background: linear-gradient(135deg, var(--primary-dark), var(--accent-blue));
      color: var(--text-light);
      font-weight: 700;
      padding: 1.5rem 1rem;
      text-align: center;
      border-bottom: 2px solid var(--input-border);
      border-right: 1px solid var(--input-border);
      transition: all 0.3s ease;
    }

    .data-table thead th:last-child {
      border-right: none;
    }

    .data-table thead th:hover {
      background: linear-gradient(135deg, var(--accent-blue), var(--title-green));
      transform: translateY(-1px);
    }

    .th-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }

    .th-icon {
      font-size: 1.2rem;
      opacity: 0.9;
    }

    .data-table tbody td {
      padding: 1.5rem 1rem;
      border-bottom: 1px solid var(--input-border);
      background-color: var(--form-dark);
      text-align: center;
      vertical-align: middle;
    }

    .data-table tbody tr {
      transition: all 0.3s ease;
    }

    .data-table tbody tr:hover {
      background-color: rgba(8, 164, 189, 0.05);
      transform: translateY(-1px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .cell-content {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    /* User info avec avatar */
    .user-info {
      display: flex;
      align-items: center;
      gap: 1rem;
      justify-content: flex-start;
    }

    .user-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: linear-gradient(135deg, var(--accent-blue), var(--title-green));
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      position: relative;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(8, 164, 189, 0.3);
    }

    .user-avatar:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 12px rgba(8, 164, 189, 0.4);
    }

    .avatar-icon {
      font-size: 1.2rem;
      color: white;
      transition: transform 0.3s ease;
    }

    .user-avatar:hover .avatar-icon {
      transform: scale(1.1);
    }

    .user-details {
      flex: 1;
      text-align: left;
    }

    .cell-main {
      font-weight: 600;
      color: var(--text-light);
      font-size: 1rem;
      margin-bottom: 0.25rem;
    }

    .cell-meta {
      font-size: 0.8rem;
      color: var(--text-muted);
    }

    /* Badge des heures */
    .hours-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.25rem;
      background: linear-gradient(135deg, rgba(8, 164, 189, 0.1), rgba(0, 99, 93, 0.1));
      border: 2px solid var(--accent-blue);
      border-radius: 25px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .hours-badge::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(8, 164, 189, 0.2), transparent);
      transition: left 0.5s ease;
    }

    .hours-badge:hover {
      background: linear-gradient(135deg, rgba(8, 164, 189, 0.2), rgba(0, 99, 93, 0.2));
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(8, 164, 189, 0.3);
    }

    .hours-badge:hover::before {
      left: 100%;
    }

    .hours-icon {
      font-size: 1rem;
      color: var(--accent-blue);
    }

    .hours-number {
      font-weight: 700;
      color: var(--accent-blue);
      font-size: 1.1rem;
    }

    .hours-unit {
      font-size: 0.9rem;
      color: var(--text-light);
      font-weight: 500;
    }

    /* Liste des mati√®res */
    .matieres-list {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      align-items: center;
    }

    .matiere-tag {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: rgba(255, 255, 255, 0.05);
      border-left: 3px solid var(--accent-blue);
      border-radius: 6px;
      font-size: 0.85rem;
      font-weight: 500;
      color: var(--text-light);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .matiere-tag::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
      transition: left 0.5s ease;
    }

    .matiere-tag:hover {
      background: rgba(255, 255, 255, 0.1);
      transform: translateX(3px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .matiere-tag:hover::before {
      left: 100%;
    }

    .matiere-icon {
      font-size: 0.9rem;
    }

    .no-matieres {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-muted);
      font-style: italic;
      font-size: 0.9rem;
      opacity: 0.8;
    }

    .no-icon {
      font-size: 1rem;
      opacity: 0.6;
    }

    /* √âtat vide */
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      max-width: 600px;
      margin: 3rem auto;
      background: rgba(42, 45, 47, 0.3);
      border: 2px solid var(--input-border);
      border-radius: 12px;
    }

    .empty-icon {
      font-size: 6rem;
      margin-bottom: 2rem;
      opacity: 0.7;
      animation: float 3s ease-in-out infinite;
    }

    .empty-title {
      color: var(--accent-blue);
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .empty-message {
      color: var(--text-muted);
      font-size: 1.2rem;
      line-height: 1.6;
      margin-bottom: 2rem;
    }

    .empty-action {
      margin-top: 2rem;
    }

    /* Boutons */
    .custom-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      padding: 1rem 2rem;
      border: 2px solid;
      border-radius: 8px;
      font-weight: 600;
      font-size: 1rem;
      text-decoration: none;
      transition: all 0.3s ease;
      cursor: pointer;
      background: none;
    }

    .custom-btn-primary {
      background-color: var(--accent-blue);
      border-color: var(--accent-blue);
      color: white;
    }

    .custom-btn-primary:hover {
      background-color: var(--title-green);
      border-color: var(--title-green);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(0, 99, 93, 0.3);
    }

    .btn-icon {
      font-size: 1.1rem;
    }

    /* Animations */
    @keyframes float {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    /* Responsive */
    @media (max-width: 768px) {
      .admin-stats-row {
        flex-direction: column;
        gap: 1.5rem;
        padding: 1.5rem;
        border-radius: 12px;
      }

      .admin-stat-separator {
        display: none;
      }

      .admin-stat-item {
        min-width: auto;
        width: 100%;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 8px;
        border: 1px solid var(--input-border);
      }

      .admin-stat-number {
        font-size: 1.5rem;
      }

      .header-title {
        font-size: 1.6rem;
      }

      .table-responsive {
        overflow-x: auto;
      }

      .data-table {
        min-width: 600px;
      }

      .user-info {
        flex-direction: column;
        gap: 0.5rem;
        text-align: center;
      }

      .user-details {
        text-align: center;
      }

      .data-table tbody td {
        padding: 1rem 0.5rem;
      }
    }

    @media (max-width: 480px) {
      .admin-stats-container {
        padding: 0 0.5rem;
      }

      .admin-stats-row {
        padding: 1rem;
        gap: 1rem;
      }

      .admin-stat-icon {
        font-size: 1.5rem;
      }

      .admin-stat-number {
        font-size: 1.3rem;
      }

      .admin-stat-label {
        font-size: 0.8rem;
      }

      .header-icon {
        font-size: 4rem;
      }

      .empty-icon {
        font-size: 4rem;
      }

      .empty-title {
        font-size: 1.5rem;
      }

      .empty-message {
        font-size: 1rem;
      }
    }
  </style>
</turbo-frame>