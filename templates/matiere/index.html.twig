{% extends 'base.html.twig' %}

{% block title %}
  Matières - Gestion
{% endblock %}

{% block body %}
  <div class="management-container">
    <!-- En-tête de la page -->
    <div class="page-header">
      <div class="header-content">
        <div class="header-icon">📚</div>
        <div class="header-text">
          <h1 class="page-title">Gestion des Matières</h1>
          <p class="page-subtitle">Organisez et personnalisez les matières enseignées</p>
        </div>
      </div>
    </div>

    <!-- Navigation des onglets -->
    <div class="navigation-section">
      <div class="nav-container">
        <nav class="tab-navigation">
          <a href="{{ path('matiere_show', { nomOnglet: 'new' }) }}" class="nav-tab" data-turbo-frame="matiere_tray">
            <span class="tab-icon">➕</span>
            <span class="tab-text">Créer une matière</span>
          </a>
          <a href="{{ path('matiere_show', { nomOnglet: 'list' }) }}" class="nav-tab" data-turbo-frame="matiere_tray">
            <span class="tab-icon">📋</span>
            <span class="tab-text">Liste des matières</span>
          </a>
        </nav>
      </div>
    </div>

    <!-- Contenu principal -->
    <div class="content-section">
      <div class="content-container">
        <turbo-frame id="matiere_tray" src="{{ path('matiere_show', { nomOnglet: app.session.get('matiere_active') ? : 'new' }) }}">
          <div class="loading-state">
            <div class="loading-spinner"></div>
            <p class="loading-text">Chargement en cours...</p>
          </div>
        </turbo-frame>
      </div>
    </div>
  </div>
{% endblock %}
