<turbo-frame id="classe_tray">
  <div class="list-classe-container" data-controller="table">
    <!-- En-t√™te de la liste -->
    <header class="display-header">
      <div class="header-icon">üìã</div>
      <h2 class="header-title">Liste des Classes</h2>
      <p class="header-subtitle">G√©rez toutes les classes de votre √©tablissement</p>
    </header>

    <!-- Flash container -->
    <div id="flash-container"></div>

    {% if classes is empty %}
      <!-- √âtat vide -->
      <div class="empty-state">
        <div class="empty-icon">üéì</div>
        <h3 class="empty-title">Aucune classe cr√©√©e</h3>
        <p class="empty-message">Commencez par cr√©er votre premi√®re classe pour organiser votre √©tablissement.</p>
        <div class="empty-action">
          <a href="{{ path('classe_show', { nomOnglet: 'new' }) }}" class="custom-btn custom-btn-primary" data-turbo-frame="classe_tray" data-controller="button-hover">
            <span class="btn-icon">‚ûï</span>
            Cr√©er ma premi√®re classe
          </a>
        </div>
      </div>
    {% else %}
      <!-- Statistiques rapides -->
      <div class="stats-row" data-controller="stats-counter">
        <div class="stat-card" data-stats-counter-target="item">
          <div class="stat-icon">üéì</div>
          <div class="stat-content">
            <div class="stat-value">{{ classes|length }}</div>
            <div class="stat-label">Classes cr√©√©es</div>
          </div>
        </div>
        <div class="stat-card" data-stats-counter-target="item">
          <div class="stat-icon">üéØ</div>
          <div class="stat-content">
            <div class="stat-value">
              {% set niveaux = [] %}
              {% for classe in classes %}
                {% if classe.niveau.nom not in niveaux %}
                  {% set niveaux = niveaux|merge([classe.niveau.nom]) %}
                {% endif %}
              {% endfor %}
              {{ niveaux|length }}
            </div>
            <div class="stat-label">Niveaux repr√©sent√©s</div>
          </div>
        </div>
      </div>

      <!-- Table des donn√©es -->
      <div class="table-responsive">
        <table class="data-table">
          <thead>
            <tr>
              <th>
                <div class="th-content">
                  <span class="th-icon">üè∑Ô∏è</span>
                  Nom de la classe
                </div>
              </th>
              <th>
                <div class="th-content">
                  <span class="th-icon">üéØ</span>
                  Niveau
                </div>
              </th>
              <th>
                <div class="th-content">
                  <span class="th-icon">‚öôÔ∏è</span>
                  Actions
                </div>
              </th>
            </tr>
          </thead>
          <tbody>
            {% for classe in classes %}
              <tr class="table-row" data-table-target="row">
                <td>
                  <div class="cell-content">
                    <div class="cell-main">{{ classe.nom }}</div>
                    <div class="cell-meta">ID: {{ classe.id }}</div>
                  </div>
                </td>
                <td>
                  <div class="cell-content">
                    <span class="badge-custom">
                      <span>üéØ</span>
                      {{ classe.niveau.nom }}
                    </span>
                  </div>
                </td>
                <td>
                  <div class="action-buttons">
                    <form method="post" action="{{ path('classe_edt', { id: classe.id }) }}" style="display:inline" data-turbo-frame="classe_tray">
                      <button type="submit" class="action-btn btn-create" title="Cr√©er un emploi du temps" data-controller="button-hover">
                        <span class="btn-icon">üìÖ</span>
                        <span class="btn-text">Cr√©er EDT</span>
                      </button>
                    </form>

                    <form method="post" action="{{ path('show_edt', { id: classe.id }) }}" style="display:inline" data-turbo-frame="classe_tray">
                      <button type="submit" class="action-btn btn-view" title="Voir l'emploi du temps" data-controller="button-hover">
                        <span class="btn-icon">üëÅÔ∏è</span>
                        <span class="btn-text">Voir EDT</span>
                      </button>
                    </form>

                    <form method="post" action="{{ path('classe_delete', { id: classe.id }) }}" style="display:inline" data-turbo-frame="classe_tray" data-controller="confirm" data-confirm-message-value="√ätes-vous s√ªr de vouloir supprimer la classe {{ classe.nom }} ?" data-action="submit->confirm#ask">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete_classe_' ~ classe.id) }}" />
                      <button type="submit" class="action-btn btn-delete" title="Supprimer la classe" data-controller="button-hover">
                        <span class="btn-icon">üóëÔ∏è</span>
                        <span class="btn-text">Supprimer</span>
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    {% endif %}
  </div>

  <style>
    /* Styles sp√©cifiques pour la liste */
    .list-classe-container {
      max-width: 1400px;
      margin: 0 auto;
      color: var(--text-light);
    }
    
    /* En-t√™te de la liste */
    .display-header {
      text-align: center;
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid var(--title-green);
    }
    
    .header-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      opacity: 0.9;
    }
    
    .header-title {
      color: var(--accent-blue);
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }
    
    .header-subtitle {
      color: var(--text-muted);
      font-size: 1rem;
      margin: 0;
      line-height: 1.4;
    }
    
    /* Statistiques */
    .stats-row {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
      margin-bottom: 2.5rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .stat-card {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1.5rem;
      background-color: rgba(42, 45, 47, 0.5);
      border: 2px solid var(--input-border);
      border-radius: 12px;
      transition: all 0.3s ease;
    }
    
    .stat-card:hover {
      border-color: var(--accent-blue);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(8, 164, 189, 0.2);
    }
    
    .stat-icon {
      font-size: 2.5rem;
      opacity: 0.8;
    }
    
    .stat-content {
      flex: 1;
    }
    
    .stat-value {
      color: var(--accent-blue);
      font-size: 2rem;
      font-weight: 700;
      line-height: 1;
    }
    
    .stat-label {
      color: var(--text-muted);
      font-size: 0.9rem;
      font-weight: 500;
      margin-top: 0.25rem;
    }
    
    /* √âtat vide */
    .empty-state {
      text-align: center;
      padding: 3rem 2rem;
      max-width: 500px;
      margin: 2rem auto;
    }
    
    .empty-icon {
      font-size: 5rem;
      margin-bottom: 1.5rem;
      opacity: 0.7;
    }
    
    .empty-title {
      color: var(--accent-blue);
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }
    
    .empty-message {
      color: var(--text-muted);
      font-size: 1.1rem;
      line-height: 1.6;
      margin-bottom: 2rem;
    }
    
    .empty-action {
      margin-top: 2rem;
    }
    
    /* Tableau de donn√©es */
    .table-responsive {
      border-radius: 12px;
      background-color: var(--form-dark);
      border: 2px solid var(--title-green);
      box-shadow: 0 8px 25px rgba(1, 23, 47, 0.15);
      overflow: hidden;
      margin-top: 1.5rem;
    }
    
    .data-table {
      width: 100%;
      border-collapse: collapse;
      background-color: var(--form-dark);
      color: var(--text-light);
      margin: 0;
    }
    
    .data-table thead th {
      background-color: var(--primary-dark);
      color: var(--text-light);
      font-weight: 700;
      padding: 1rem 1.5rem;
      text-align: left;
      border-bottom: 2px solid var(--input-border);
    }
    
    .data-table tbody td {
      padding: 1rem 1.5rem;
      border-bottom: 1px solid var(--input-border);
      background-color: var(--form-dark);
    }
    
    .data-table tbody tr {
      transition: all 0.3s ease;
    }
    
    .data-table tbody tr:hover {
      background-color: rgba(8, 164, 189, 0.1);
      transform: translateY(-1px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    
    .data-table tbody tr.selected {
      background-color: rgba(8, 164, 189, 0.2);
      border-left: 3px solid var(--accent-blue);
    }
    
    /* En-t√™tes de tableau am√©lior√©s */
    .th-content {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .th-icon {
      font-size: 1rem;
      opacity: 0.8;
    }
    
    /* Contenu des cellules */
    .cell-content {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }
    
    .cell-main {
      font-weight: 600;
      color: var(--text-light);
    }
    
    .cell-meta {
      font-size: 0.8rem;
      color: var(--text-muted);
    }
    
    /* Badge personnalis√© */
    .badge-custom {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background-color: rgba(8, 164, 189, 0.1);
      border: 1px solid var(--accent-blue);
      border-radius: 20px;
      color: var(--accent-blue);
      font-size: 0.9rem;
      font-weight: 500;
    }
    
    /* Boutons d'action */
    .action-buttons {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }
    
    .action-btn {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      padding: 0.5rem 0.75rem;
      border: 1px solid;
      border-radius: 6px;
      font-size: 0.85rem;
      font-weight: 500;
      transition: all 0.3s ease;
      cursor: pointer;
      text-decoration: none;
      background: none;
    }
    
    .btn-create {
      color: var(--success-green);
      border-color: var(--success-green);
    }
    
    .btn-create:hover {
      background-color: var(--success-green);
      color: white;
      transform: translateY(-1px);
    }
    
    .btn-view {
      color: var(--info-blue);
      border-color: var(--info-blue);
    }
    
    .btn-view:hover {
      background-color: var(--info-blue);
      color: white;
      transform: translateY(-1px);
    }
    
    .btn-delete {
      color: var(--danger-red);
      border-color: var(--danger-red);
    }
    
    .btn-delete:hover {
      background-color: var(--danger-red);
      color: white;
      transform: translateY(-1px);
    }
    
    .btn-text {
      white-space: nowrap;
    }
    
    .btn-icon {
      font-size: 0.9rem;
    }
    
    /* Responsive pour les actions */
    @media (max-width: 768px) {
      .stats-row {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
    
      .action-buttons {
        flex-direction: column;
      }
    
      .action-btn {
        justify-content: center;
        width: 100%;
      }
    
      .btn-text {
        display: none;
      }
    
      .data-table {
        font-size: 0.9rem;
      }
    
      .data-table thead th,
      .data-table tbody td {
        padding: 0.75rem 1rem;
      }
    }
    
    /* Animation pour les lignes */
    .table-row {
      animation: fadeInUp 0.3s ease-out;
    }
    
    .table-row:nth-child(1) {
      animation-delay: 0.1s;
    }
    .table-row:nth-child(2) {
      animation-delay: 0.2s;
    }
    .table-row:nth-child(3) {
      animation-delay: 0.3s;
    }
    .table-row:nth-child(4) {
      animation-delay: 0.4s;
    }
    .table-row:nth-child(5) {
      animation-delay: 0.5s;
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</turbo-frame>
