<turbo-frame id="classe_tray">
  <div class="create-classe-container" data-controller="form-validation">
    <!-- En-t√™te du formulaire -->
    <header class="form-header">
      <div class="form-icon">üéì</div>
      <h2 class="form-title">Cr√©er une Classe</h2>
      <p class="form-subtitle">Ajoutez une nouvelle classe √† votre √©tablissement</p>
    </header>

    <!-- Messages flash -->
    <div id="flash-container">
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="alert alert-{{ label }}" data-controller="flash" data-flash-auto-hide-value="true" data-flash-delay-value="5000">
            <div class="alert-icon">
              {% if label == 'success' %}
                üéâ
              {% elseif label == 'error' %}
                ‚ö†Ô∏è
              {% else %}
                ‚ÑπÔ∏è
              {% endif %}
            </div>
            <div class="alert-content">{{ message }}</div>
            <button type="button" class="alert-close" data-action="click->flash#remove">√ó</button>
          </div>
        {% endfor %}
      {% endfor %}
    </div>

    <!-- Formulaire -->
    {{ form_start(form, { action: path('classe_show', { nomOnglet: 'new' }), attr: { class: 'classe-form', 'data-action': 'submit->form-validation#validateForm' } }) }}

    <div class="form-section">
      <h3 class="section-title">
        <span class="section-icon">üìù</span>
        Informations de la classe
      </h3>

      <div class="form-row">
        <div class="form-group">
          <div class="input-wrapper">{{ form_label(form.nom, 'Nom de la classe', { attr: { class: 'form-label' } }) }}
            {{ form_widget(form.nom, { attr: { class: 'form-input', placeholder: 'Ex: Terminale S1, 1√®re ES2...', 'data-form-validation-target': 'input', required: true } }) }}
            {{ form_errors(form.nom) }}</div>
        </div>

        <div class="form-group">
          <div class="input-wrapper">{{ form_label(form.niveau, "Niveau d'√©tudes", { attr: { class: 'form-label' } }) }}
            {{ form_widget(form.niveau, { attr: { class: 'form-input', 'data-form-validation-target': 'input', required: true } }) }}
            {{ form_errors(form.niveau) }}</div>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="custom-btn custom-btn-primary" data-controller="button-hover">
        <span class="btn-icon">‚úÖ</span>
        Cr√©er la classe
      </button>
    </div>

    {{ form_end(form) }}
  </div>

  <style>
    /* Styles sp√©cifiques pour le formulaire de cr√©ation */
    .create-classe-container {
      max-width: 800px;
      margin: 0 auto;
      color: var(--text-light);
    }
    
    /* En-t√™te du formulaire */
    .form-header {
      text-align: center;
      margin-bottom: 2.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid var(--title-green);
    }
    
    .form-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      opacity: 0.9;
    }
    
    .form-title {
      color: var(--accent-blue);
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }
    
    .form-subtitle {
      color: var(--text-muted);
      font-size: 1rem;
      margin: 0;
      line-height: 1.4;
    }
    
    /* Alertes (reprises du syst√®me existant) */
    .alert {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      padding: 1rem 1.5rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      font-weight: 500;
      border: 2px solid;
      position: relative;
    }
    
    .alert-success {
      background-color: rgba(40, 167, 69, 0.1);
      border-color: var(--success-green);
      color: var(--success-green);
    }
    
    .alert-error {
      background-color: rgba(220, 53, 69, 0.1);
      border-color: var(--danger-red);
      color: var(--danger-red);
    }
    
    .alert-info {
      background-color: rgba(23, 162, 184, 0.1);
      border-color: var(--info-blue);
      color: var(--info-blue);
    }
    
    .alert-icon {
      font-size: 1.2rem;
      margin-top: 0.1rem;
    }
    
    .alert-content {
      flex: 1;
    }
    
    .alert-close {
      background: none;
      border: none;
      color: currentColor;
      font-size: 1.2rem;
      cursor: pointer;
      opacity: 0.7;
      transition: opacity 0.3s;
      padding: 0;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .alert-close:hover {
      opacity: 1;
    }
    
    /* Sections du formulaire */
    .form-section {
      margin-bottom: 2.5rem;
      padding: 1.5rem;
      background-color: rgba(42, 45, 47, 0.3);
      border-radius: 12px;
      border: 1px solid var(--input-border);
    }
    
    .section-title {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      color: var(--accent-blue);
      font-size: 1.3rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      padding-bottom: 0.75rem;
      border-bottom: 1px solid var(--input-border);
    }
    
    .section-icon {
      font-size: 1.4rem;
    }
    
    /* Lignes de formulaire */
    .form-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }
    
    /* Groupes de formulaire */
    .form-group {
      margin-bottom: 1rem;
    }
    
    .input-wrapper {
      position: relative;
    }
    
    .input-icon {
      position: absolute;
      left: 1rem;
      top: 3.2rem;
      font-size: 1.1rem;
      color: var(--accent-blue);
      z-index: 2;
      pointer-events: none;
    }
    
    /* Labels */
    .form-label {
      display: block;
      color: var(--text-light);
      font-weight: 600;
      margin-bottom: 0.5rem;
      font-size: 1rem;
    }
    
    /* Inputs */
    .form-input {
      width: 100%;
      padding: 1rem 1rem 1rem 3rem;
      background-color: var(--input-bg);
      border: 2px solid var(--input-border);
      border-radius: 8px;
      color: var(--text-light);
      font-size: 1rem;
      transition: all 0.3s ease;
      box-sizing: border-box;
    }
    
    .form-input:focus {
      outline: none;
      border-color: var(--accent-blue);
      background-color: #323539;
      box-shadow: 0 0 0 3px rgba(8, 164, 189, 0.1);
    }
    
    .form-input::placeholder {
      color: var(--text-muted);
      opacity: 0.7;
    }
    
    /* √âtats de validation */
    .is-valid {
      border-color: var(--success-green) !important;
      background-color: rgba(40, 167, 69, 0.1) !important;
    }
    
    .is-invalid {
      border-color: var(--danger-red) !important;
      background-color: rgba(220, 53, 69, 0.1) !important;
    }
    
    /* Actions du formulaire */
    .form-actions {
      margin-top: 2.5rem;
      text-align: center;
    }
    
    /* Bouton personnalis√© */
    .custom-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      padding: 1.25rem 3rem;
      border: 2px solid;
      border-radius: 8px;
      font-weight: 600;
      font-size: 1.1rem;
      text-decoration: none;
      transition: all 0.3s ease;
      cursor: pointer;
      background: none;
      min-width: 250px;
    }
    
    .custom-btn-primary {
      background-color: var(--accent-blue);
      border-color: var(--accent-blue);
      color: white;
    }
    
    .custom-btn-primary:hover {
      background-color: var(--title-green);
      border-color: var(--title-green);
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 99, 93, 0.3);
    }
    
    .custom-btn-primary:active {
      transform: translateY(0);
    }
    
    .btn-icon {
      font-size: 1.2rem;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
      .form-row {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
    
      .form-section {
        padding: 1rem;
      }
    
      .section-title {
        font-size: 1.2rem;
      }
    
      .form-input {
        padding: 0.875rem 0.875rem 0.875rem 2.75rem;
      }
    
      .input-icon {
        left: 0.875rem;
        top: 3.1rem;
      }
    
      .custom-btn {
        width: 100%;
        padding: 1rem 1.5rem;
        min-width: auto;
      }
    }
    
    /* Animation d'entr√©e */
    .create-classe-container {
      animation: fadeInUp 0.6s ease-out;
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</turbo-frame>
