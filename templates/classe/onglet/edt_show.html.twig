<turbo-frame id="classe_tray">
  <section class="container">
    <div class="schedule-display-container">
      <header class="display-header">
        <h2 class="header-title mt-4">Emploi du temps de {{ classe.nom }}</h2>
        <p class="header-subtitle">Visualisez votre planning hebdomadaire</p>
      </header>

      {% if edtClasse is empty %}
        <div class="empty-state">
          <div class="empty-icon">üìÖ</div>
          <h3 class="empty-title">Aucun emploi du temps disponible</h3>
          <p class="empty-message">Votre planning sera disponible d√®s qu'il sera configur√©.</p>
        </div>
      {% else %}
        <div class="stats-row">
          <!-- Heures de cours -->
          <div class="stat-card">
            <div class="stat-icon">üìö</div>
            <div class="stat-content">
              <div class="stat-value">
                {% set courseCount = 0 %}
                {% for jour in ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi'] %}
                  {% for slot in edtClasse[jour] %}
                    {% if slot.course not in ['OUI', 'MEH', null, 'lunchBreak'] %}
                      {% set courseCount = courseCount + 1 %}
                    {% endif %}
                  {% endfor %}
                {% endfor %}
                {{ courseCount }}
              </div>
              <div class="stat-label">Heures de cours</div>
            </div>
          </div>

          <div class="stat-card">
            <div class="stat-icon">üõãÔ∏è</div>
            <div class="stat-content">
              <div class="stat-value">
                {% set freeCount = 0 %}
                {% for jour in ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi'] %}
                  {% for slot in edtClasse[jour] %}
                    {% if slot.course in ['OUI', 'MEH', null] %}
                      {% set freeCount = freeCount + 1 %}
                    {% endif %}
                  {% endfor %}
                {% endfor %}
                {{ freeCount }}
              </div>
              <div class="stat-label">Temps libre</div>
            </div>
          </div>

          <div class="stat-card">
            <div class="stat-icon">üéØ</div>
            <div class="stat-content">
              <div class="stat-value">
                {% set uniqueSubjects = [] %}
                {% for jour in ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi'] %}
                  {% for slot in edtClasse[jour] %}
                    {% if slot.course not in ['OUI', 'MEH', null, 'lunchBreak'] and slot.course not in uniqueSubjects %}
                      {% set uniqueSubjects = uniqueSubjects|merge([slot.course]) %}
                    {% endif %}
                  {% endfor %}
                {% endfor %}
                {{ uniqueSubjects|length }}
              </div>
              <div class="stat-label">Mati√®res</div>
            </div>
          </div>
        </div>

        {# --- AFFICHAGE DU PLANNING --- #}
        <div class="schedule-horizontal">
          {% set joursOrdres = ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi'] %}

          {% for jour in joursOrdres %}
            {% set slots = edtClasse[jour] ?? [] %}
            <div class="day-column">
              <div class="day-header">
                <h3 class="day-title">
                  <span class="day-icon">
                    {% if jour == 'Lundi' %}
                      üåü
                    {% elseif jour == 'Mardi' %}
                      ‚ö°
                    {% elseif jour == 'Mercredi' %}
                      üî•
                    {% elseif jour == 'Jeudi' %}
                      üí´
                    {% elseif jour == 'Vendredi' %}
                      üéØ
                    {% else %}
                      ‚ú®
                    {% endif %}
                  </span>
                  {{ jour }}
                </h3>
                <div class="day-summary">{{ slots|length }} cr√©neaux</div>
              </div>

              <div class="time-slots-vertical">
                {% for slot in slots %}
                  {% set course = slot.course %}
                  {% set color = subjectColors[course]|default('#3498db') %}
                  <div class="time-slot-compact {% if course == 'lunchBreak' %}
                      lunchbreak
                    {% elseif course in ['OUI', 'MEH', null] %}
                      break
                    {% else %}
                      course
                    {% endif %}" 
                    {% if course not in ['OUI', 'MEH', null, 'lunchBreak'] %}
                      style="border-left-color: {{ color }};"
                    {% endif %}>
                    <div class="slot-time-compact">{{ slot.start }} - {{ slot.end }}</div>
                    <div class="slot-content-compact">
                      {% if course == 'lunchBreak' %}
                        <span class="slot-icon">üçΩÔ∏è</span>
                        <span class="slot-label-compact">Pause d√©jeuner</span>
                      {% elseif course in ['OUI', 'MEH', null] %}
                        <span class="slot-icon">‚úÖ</span>
                        <span class="slot-label-compact">Libre</span>
                      {% else %}
                        <span class="slot-icon">üìñ</span>
                        <span class="slot-label-compact">{{ course }}</span>
                      {% endif %}
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </section>

  <style>
    /* Variables de couleurs */
    :root {
      --primary-dark: #01172f;
      --accent-blue: #08a4bd;
      --title-green: #00635d;
      --secondary-purple: #3b1f2b;
      --form-dark: #181a1b;
      --success-green: #28a745;
      --warning-orange: #ffc107;
      --danger-red: #dc3545;
      --info-blue: #17a2b8;
      --input-bg: #2a2d2f;
      --input-border: #3a3d3f;
      --text-light: #ffffff;
      --text-muted: #b8bcc0;
      --lunch-color: #e74c3c;
      --course-color: #3498db;
      --break-color: #f39c12;
    }
    
    /* Conteneur principal */
    .schedule-display-container {
      max-width: 1400px;
      margin: 0 auto;
      color: var(--text-light);
    }

    .lunchbreak {
      border-left-color: var(--lunch-color) !important;
    }

    .break {
      border-left-color: var(--break-color) !important;
    }

    .course {
      border-left-color: var(--course-color);
    }
    
    /* En-t√™te */
    .display-header {
      text-align: center;
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid var(--title-green);
    }
    
    .header-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      opacity: 0.9;
    }
    
    .header-title {
      color: var(--accent-blue);
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }
    
    .header-subtitle {
      color: var(--text-muted);
      font-size: 1rem;
      margin: 0;
      line-height: 1.4;
    }
    
    /* Statistiques (3 colonnes pour les √©l√®ves) */
    .stats-row {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
      margin-bottom: 2.5rem;
      max-width: 900px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .stat-card {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1.5rem;
      background-color: rgba(42, 45, 47, 0.5);
      border: 2px solid var(--input-border);
      border-radius: 12px;
      transition: all 0.3s ease;
    }
    
    .stat-card:hover {
      border-color: var(--accent-blue);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(8, 164, 189, 0.2);
    }
    
    .stat-icon {
      font-size: 2.5rem;
      opacity: 0.8;
    }
    
    .stat-content {
      flex: 1;
    }
    
    .stat-value {
      color: var(--accent-blue);
      font-size: 2rem;
      font-weight: 700;
      line-height: 1;
    }
    
    .stat-label {
      color: var(--text-muted);
      font-size: 0.9rem;
      font-weight: 500;
      margin-top: 0.25rem;
    }
    
    /* Emploi du temps horizontal */
    .schedule-horizontal {
      display: flex;
      gap: 1rem;
      overflow-x: auto;
      padding-bottom: 1rem;
      margin-right: auto;
      margin-left: auto;
      width: fit-content;
    }
    
    /* Colonnes de jour */
    .day-column {
      min-width: 200px;
      flex-shrink: 0;
      background-color: rgba(42, 45, 47, 0.3);
      border: 2px solid var(--input-border);
      border-radius: 12px;
      overflow: hidden;
      transition: all 0.3s ease;
      animation: fadeInUp 0.6s ease-out;
    }
    
    .day-column:hover {
      border-color: var(--title-green);
      box-shadow: 0 8px 25px rgba(0, 99, 93, 0.2);
    }
    
    .day-header {
      background: linear-gradient(135deg, var(--title-green), var(--accent-blue));
      padding: 1rem;
      text-align: center;
    }
    
    .day-title {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      color: white;
      font-size: 1.1rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }
    
    .day-icon {
      font-size: 1.2rem;
    }
    
    .day-summary {
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.8rem;
      font-weight: 500;
    }
    
    /* Cr√©neaux verticaux compacts */
    .time-slots-vertical {
      padding: 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .time-slot-compact {
      padding: 0.75rem;
      border-radius: 6px;
      border-left: 3px solid;
      transition: all 0.3s ease;
      background-color: rgba(255, 255, 255, 0.03);
    }
    
    .time-slot-compact:hover {
      transform: translateX(3px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      background-color: rgba(255, 255, 255, 0.05);
    }
    
    .slot-time-compact {
      font-family: 'Courier New', monospace;
      font-weight: 600;
      color: var(--text-light);
      font-size: 0.85rem;
      margin-bottom: 0.25rem;
    }
    
    .slot-content-compact {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .slot-icon {
      font-size: 1rem;
    }
    
    .slot-label-compact {
      font-weight: 500;
      color: var(--text-light);
      font-size: 0.85rem;
    }
    
    /* √âtat vide */
    .empty-state {
      text-align: center;
      padding: 3rem 2rem;
      max-width: 500px;
      margin: 2rem auto;
    }
    
    .empty-icon {
      font-size: 5rem;
      margin-bottom: 1.5rem;
      opacity: 0.7;
    }
    
    .empty-title {
      color: var(--accent-blue);
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }
    
    .empty-message {
      color: var(--text-muted);
      font-size: 1.1rem;
      line-height: 1.6;
      margin-bottom: 2rem;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
      .stats-row {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
    
      .schedule-horizontal {
        flex-direction: column;
        overflow-x: visible;
      }
    
      .day-column {
        min-width: auto;
        width: 100%;
      }
    
      .header-title {
        font-size: 1.6rem;
      }
    
      .stat-value {
        font-size: 1.5rem;
      }
    
      .empty-icon {
        font-size: 4rem;
      }
    
      .empty-title {
        font-size: 1.5rem;
      }
    
      .empty-message {
        font-size: 1rem;
      }
    }

    @media (max-width: 992px) {
      .stats-row {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    @media (max-width: 480px) {
      .day-header {
        padding: 0.75rem;
      }
    
      .time-slots-vertical {
        padding: 0.75rem;
      }
    
      .time-slot-compact {
        padding: 0.5rem;
      }
    
      .day-title {
        font-size: 1rem;
      }
    
      .slot-time-compact {
        font-size: 0.8rem;
      }
    
      .slot-label-compact {
        font-size: 0.8rem;
      }
    }
    
    /* Animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Animation √©chelonn√©e pour les colonnes */
    .day-column:nth-child(1) {
      animation-delay: 0.1s;
    }
    .day-column:nth-child(2) {
      animation-delay: 0.2s;
    }
    .day-column:nth-child(3) {
      animation-delay: 0.3s;
    }
    .day-column:nth-child(4) {
      animation-delay: 0.4s;
    }
    .day-column:nth-child(5) {
      animation-delay: 0.5s;
    }
    
    /* Scroll horizontal personnalis√© */
    .schedule-horizontal::-webkit-scrollbar {
      height: 8px;
    }
    
    .schedule-horizontal::-webkit-scrollbar-track {
      background: var(--input-bg);
      border-radius: 4px;
    }
    
    .schedule-horizontal::-webkit-scrollbar-thumb {
      background: var(--accent-blue);
      border-radius: 4px;
    }
    
    .schedule-horizontal::-webkit-scrollbar-thumb:hover {
      background: var(--title-green);
    }
  </style>
</turbo-frame>