<!-- ========== TEMPLATE: classe/onglet/edt_show.html.twig REFACTORIS√â ========== -->
<turbo-frame id="classe_tray">
  <div class="schedule-display-container" 
       data-controller="schedule-preview" 
       data-schedule-preview-container-target="container">
    
    <header class="display-header">
      <div class="header-icon">üìÖ</div>
      <h2 class="header-title">Emploi du temps de {{ classe.nom }}</h2>
      <p class="header-subtitle">Visualisez votre planning hebdomadaire</p>
    </header>

    {% if edtClasse is empty %}
      <div class="empty-state">
        <div class="empty-icon">üìÖ</div>
        <h3 class="empty-title">Aucun emploi du temps disponible</h3>
        <p class="empty-message">Votre planning sera disponible d√®s qu'il sera configur√©.</p>
        <div class="empty-action">
          <a href="{{ path('classe_show', { nomOnglet: 'list' }) }}" 
             class="custom-btn custom-btn-primary" 
             data-turbo-frame="classe_tray"
             data-controller="button-hover">
            <span class="btn-icon">üìã</span>
            Retour √† la liste
          </a>
        </div>
      </div>
    {% else %}
      
      <!-- Statistiques -->
      <div class="stats-row" data-controller="stats-counter">
        <div class="stat-card" data-stats-counter-target="item">
          <div class="stat-icon">üìö</div>
          <div class="stat-content">
            <div class="stat-value">
              {% set courseCount = 0 %}
              {% for jour in ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi'] %}
                {% for slot in edtClasse[jour] %}
                  {% if slot.course not in ['OUI', 'MEH', null, 'lunchBreak'] %}
                    {% set courseCount = courseCount + 1 %}
                  {% endif %}
                {% endfor %}
              {% endfor %}
              {{ courseCount }}
            </div>
            <div class="stat-label">Heures de cours</div>
          </div>
        </div>

        <div class="stat-card" data-stats-counter-target="item">
          <div class="stat-icon">üõãÔ∏è</div>
          <div class="stat-content">
            <div class="stat-value">
              {% set freeCount = 0 %}
              {% for jour in ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi'] %}
                {% for slot in edtClasse[jour] %}
                  {% if slot.course in ['OUI', 'MEH', null] %}
                    {% set freeCount = freeCount + 1 %}
                  {% endif %}
                {% endfor %}
              {% endfor %}
              {{ freeCount }}
            </div>
            <div class="stat-label">Temps libre</div>
          </div>
        </div>

        <div class="stat-card" data-stats-counter-target="item">
          <div class="stat-icon">üéØ</div>
          <div class="stat-content">
            <div class="stat-value">
              {% set uniqueSubjects = [] %}
              {% for jour in ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi'] %}
                {% for slot in edtClasse[jour] %}
                  {% if slot.course not in ['OUI', 'MEH', null, 'lunchBreak'] and slot.course not in uniqueSubjects %}
                    {% set uniqueSubjects = uniqueSubjects|merge([slot.course]) %}
                  {% endif %}
                {% endfor %}
              {% endfor %}
              {{ uniqueSubjects|length }}
            </div>
            <div class="stat-label">Mati√®res</div>
          </div>
        </div>
      </div>

      <!-- EMPLOI DU TEMPS EN TABLEAU TRADITIONNEL -->
      <div class="schedule-table-wrapper">
        {% set joursOrdres = ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi'] %}
        
        {# Construire la grille horaire #}
        {% set allTimeSlots = [] %}
        {% for jour in joursOrdres %}
          {% for slot in edtClasse[jour] %}
            {% set timeKey = slot.start ~ '-' ~ slot.end %}
            {% if timeKey not in allTimeSlots %}
              {% set allTimeSlots = allTimeSlots|merge([timeKey]) %}
            {% endif %}
          {% endfor %}
        {% endfor %}
        
        <div class="schedule-table">
          <!-- En-t√™te du tableau -->
          <div class="schedule-header">
            <div class="time-header">
              <div class="time-header-content">
                <span class="time-icon">üïê</span>
                <span class="time-text">Horaires</span>
              </div>
            </div>
            {% for jour in joursOrdres %}
              <div class="day-header">
                <div class="day-header-content">
                  <span class="day-icon">
                    {% if jour == 'Lundi' %}üåü
                    {% elseif jour == 'Mardi' %}‚ö°
                    {% elseif jour == 'Mercredi' %}üî•
                    {% elseif jour == 'Jeudi' %}üí´
                    {% elseif jour == 'Vendredi' %}üéØ
                    {% endif %}
                  </span>
                  <span class="day-name">{{ jour }}</span>
                  <span class="day-count">{{ edtClasse[jour]|length }} cr√©neaux</span>
                </div>
              </div>
            {% endfor %}
          </div>

          <!-- Corps du tableau -->
          <div class="schedule-body">
            {% for timeSlot in allTimeSlots %}
              {% set timeSlotParts = timeSlot|split('-') %}
              {% set startTime = timeSlotParts[0] %}
              {% set endTime = timeSlotParts[1] %}
              
              <div class="schedule-row" data-time-slot="{{ timeSlot }}">
                <!-- Colonne horaire -->
                <div class="time-cell">
                  <div class="time-content">
                    <div class="time-start">{{ startTime }}</div>
                    <div class="time-separator">‚Äî</div>
                    <div class="time-end">{{ endTime }}</div>
                  </div>
                </div>

                <!-- Colonnes des jours -->
                {% for jour in joursOrdres %}
                  {% set slotFound = false %}
                  {% set currentSlot = null %}
                  
                  {% for slot in edtClasse[jour] %}
                    {% if slot.start == startTime and slot.end == endTime %}
                      {% set slotFound = true %}
                      {% set currentSlot = slot %}
                    {% endif %}
                  {% endfor %}
                  
                  <div class="course-cell {% if slotFound %}has-course{% else %}empty-cell{% endif %}">
                    {% if slotFound %}
                      {% set course = currentSlot.course %}
                      {% set color = subjectColors[course]|default('#3498db') %}
                      
                      <div class="course-content time-slot 
                                  {% if course == 'lunchBreak' %}lunch-course
                                  {% elseif course in ['OUI', 'MEH', null] %}free-course
                                  {% else %}regular-course
                                  {% endif %}"
                           {% if course not in ['OUI', 'MEH', null, 'lunchBreak'] %}
                             style="border-left-color: {{ color }}; background: linear-gradient(135deg, {{ color }}15, {{ color }}08);"
                           {% endif %}>
                        
                        <div class="course-header">
                          {% if course == 'lunchBreak' %}
                            <span class="course-icon">üçΩÔ∏è</span>
                            <span class="course-name">Pause D√©jeuner</span>
                          {% elseif course in ['OUI', 'MEH', null] %}
                            <span class="course-icon">‚úÖ</span>
                            <span class="course-name">Temps Libre</span>
                          {% else %}
                            <span class="course-icon">üìñ</span>
                            <span class="course-name">{{ course }}</span>
                          {% endif %}
                        </div>
                        
                        <div class="course-time">
                          {{ startTime }} - {{ endTime }}
                        </div>
                      </div>
                    {% else %}
                      <div class="empty-content">
                        <span class="empty-icon">‚Äî</span>
                      </div>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    {% endif %}
  </div>

  <style>
    /* Variables de couleurs */
    :root {
      --primary-dark: #01172f;
      --accent-blue: #08a4bd;
      --title-green: #00635d;
      --secondary-purple: #3b1f2b;
      --form-dark: #181a1b;
      --success-green: #28a745;
      --warning-orange: #ffc107;
      --danger-red: #dc3545;
      --info-blue: #17a2b8;
      --input-bg: #2a2d2f;
      --input-border: #3a3d3f;
      --text-light: #ffffff;
      --text-muted: #b8bcc0;
      --lunch-color: #e74c3c;
      --course-color: #3498db;
      --break-color: #f39c12;
      --free-color: #95a5a6;
    }

    /* Conteneur principal */
    .schedule-display-container {
      max-width: 1400px;
      margin: 0 auto;
      color: var(--text-light);
    }

    /* En-t√™te */
    .display-header {
      text-align: center;
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid var(--title-green);
    }

    .header-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      opacity: 0.9;
    }

    .header-title {
      color: var(--accent-blue);
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .header-subtitle {
      color: var(--text-muted);
      font-size: 1rem;
      margin: 0;
      line-height: 1.4;
    }

    /* Statistiques */
    .stats-row {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
      margin-bottom: 2.5rem;
      max-width: 900px;
      margin-left: auto;
      margin-right: auto;
    }

    .stat-card {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1.5rem;
      background-color: rgba(42, 45, 47, 0.5);
      border: 2px solid var(--input-border);
      border-radius: 12px;
      transition: all 0.3s ease;
    }

    .stat-card:hover {
      border-color: var(--accent-blue);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(8, 164, 189, 0.2);
    }

    .stat-icon {
      font-size: 2.5rem;
      opacity: 0.8;
    }

    .stat-content {
      flex: 1;
    }

    .stat-value {
      color: var(--accent-blue);
      font-size: 2rem;
      font-weight: 700;
      line-height: 1;
    }

    .stat-label {
      color: var(--text-muted);
      font-size: 0.9rem;
      font-weight: 500;
      margin-top: 0.25rem;
    }

    /* Wrapper du tableau d'emploi du temps */
    .schedule-table-wrapper {
      background: var(--form-dark);
      border: 2px solid var(--title-green);
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 8px 25px rgba(1, 23, 47, 0.2);
      margin-bottom: 2rem;
    }

    /* Tableau d'emploi du temps */
    .schedule-table {
      display: flex;
      flex-direction: column;
      width: 100%;
    }

    /* En-t√™te du tableau */
    .schedule-header {
      display: grid;
      grid-template-columns: 150px repeat(5, 1fr);
      background: linear-gradient(135deg, var(--primary-dark), var(--secondary-purple));
      border-bottom: 2px solid var(--title-green);
    }

    .time-header {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1.5rem 1rem;
      background: var(--title-green);
      font-weight: 700;
    }

    .time-header-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }

    .time-icon {
      font-size: 1.5rem;
    }

    .time-text {
      font-size: 0.9rem;
      color: white;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .day-header {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1.5rem 1rem;
      border-right: 1px solid var(--input-border);
      background: linear-gradient(135deg, var(--primary-dark), var(--accent-blue));
      transition: all 0.3s ease;
    }

    .day-header:last-child {
      border-right: none;
    }

    .day-header:hover {
      background: linear-gradient(135deg, var(--accent-blue), var(--title-green));
      transform: translateY(-2px);
    }

    .day-header-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      text-align: center;
    }

    .day-icon {
      font-size: 1.5rem;
    }

    .day-name {
      font-weight: 700;
      color: white;
      font-size: 1.1rem;
    }

    .day-count {
      font-size: 0.8rem;
      color: rgba(255, 255, 255, 0.8);
      font-weight: 500;
    }

    /* Corps du tableau */
    .schedule-body {
      display: flex;
      flex-direction: column;
    }

    .schedule-row {
      display: grid;
      grid-template-columns: 150px repeat(5, 1fr);
      border-bottom: 1px solid var(--input-border);
      transition: all 0.3s ease;
    }

    .schedule-row:last-child {
      border-bottom: none;
    }

    .schedule-row:hover {
      background: rgba(8, 164, 189, 0.05);
    }

    /* Cellule horaire */
    .time-cell {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      background: var(--input-bg);
      border-right: 2px solid var(--input-border);
      font-family: 'Courier New', monospace;
    }

    .time-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.25rem;
    }

    .time-start, .time-end {
      font-weight: 600;
      color: var(--accent-blue);
      font-size: 0.9rem;
    }

    .time-separator {
      color: var(--text-muted);
      font-size: 0.8rem;
    }

    /* Cellules de cours */
    .course-cell {
      border-right: 1px solid var(--input-border);
      min-height: 80px;
      position: relative;
    }

    .course-cell:last-child {
      border-right: none;
    }

    .course-cell.has-course {
      padding: 0;
    }

    .course-cell.empty-cell {
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(255, 255, 255, 0.02);
    }

    .empty-content {
      opacity: 0.3;
    }

    .empty-icon {
      font-size: 1.5rem;
      color: var(--text-muted);
    }

    /* Contenu des cours */
    .course-content {
      height: 100%;
      width: 100%;
      padding: 1rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 0.5rem;
      border-left: 4px solid;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .course-content::before {
      display: none;
    }

    .course-content:hover {
      transform: translateY(-2px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .course-content:hover::before {
      /* Effet supprim√© */
    }

    /* Types de cours */
    .regular-course {
      border-left-color: var(--course-color);
      background: linear-gradient(135deg, rgba(52, 152, 219, 0.15), rgba(52, 152, 219, 0.05));
    }

    .lunch-course {
      border-left-color: var(--lunch-color);
      background: linear-gradient(135deg, rgba(231, 76, 60, 0.15), rgba(231, 76, 60, 0.05));
    }

    .free-course {
      border-left-color: var(--free-color);
      background: linear-gradient(135deg, rgba(149, 165, 166, 0.15), rgba(149, 165, 166, 0.05));
    }

    .course-header {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .course-icon {
      font-size: 1.2rem;
    }

    .course-name {
      font-weight: 600;
      color: var(--text-light);
      font-size: 0.95rem;
      flex: 1;
    }

    .course-time {
      font-family: 'Courier New', monospace;
      font-size: 0.8rem;
      color: var(--text-muted);
      font-weight: 500;
    }


    .schedule-row.highlight .course-content {
      border-left-width: 5px !important;
    }

    /* Contr√¥les d'animation */
    .animation-controls {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin-top: 1.5rem;
    }

    .control-btn {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: var(--accent-blue);
      border: 2px solid var(--accent-blue);
      border-radius: 8px;
      color: white;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .control-btn:hover {
      background: var(--title-green);
      border-color: var(--title-green);
      transform: translateY(-2px);
    }

    .stop-btn {
      background: var(--warning-orange);
      border-color: var(--warning-orange);
    }

    .stop-btn:hover {
      background: var(--danger-red);
      border-color: var(--danger-red);
    }

    .debug-btn {
      background: var(--secondary-purple);
      border-color: var(--secondary-purple);
    }

    .debug-btn:hover {
      background: var(--danger-red);
      border-color: var(--danger-red);
    }

    /* √âtat vide */
    .empty-state {
      text-align: center;
      padding: 3rem 2rem;
      max-width: 500px;
      margin: 2rem auto;
    }

    .empty-icon {
      font-size: 5rem;
      margin-bottom: 1.5rem;
      opacity: 0.7;
    }

    .empty-title {
      color: var(--accent-blue);
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .empty-message {
      color: var(--text-muted);
      font-size: 1.1rem;
      line-height: 1.6;
      margin-bottom: 2rem;
    }

    .empty-action {
      margin-top: 2rem;
    }

    .custom-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      padding: 1rem 2rem;
      border: 2px solid;
      border-radius: 8px;
      font-weight: 600;
      font-size: 1rem;
      text-decoration: none;
      transition: all 0.3s ease;
      cursor: pointer;
      background: none;
    }

    .custom-btn-primary {
      background-color: var(--accent-blue);
      border-color: var(--accent-blue);
      color: white;
    }

    .custom-btn-primary:hover {
      background-color: var(--title-green);
      border-color: var(--title-green);
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(0, 99, 93, 0.3);
    }

    .btn-icon {
      font-size: 1.1rem;
    }

    /* Responsive */
    @media (max-width: 1200px) {
      .schedule-header,
      .schedule-row {
        grid-template-columns: 120px repeat(5, 1fr);
      }

      .stats-row {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 768px) {
      .schedule-table-wrapper {
        overflow-x: auto;
      }

      .schedule-table {
        min-width: 600px;
      }

      .stats-row {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .day-header-content {
        gap: 0.25rem;
      }

      .day-name {
        font-size: 1rem;
      }

      .day-count {
        font-size: 0.7rem;
      }

      .course-content {
        padding: 0.75rem;
      }

      .course-name {
        font-size: 0.85rem;
      }

      .course-time {
        font-size: 0.75rem;
      }
    }


  </style>
</turbo-frame>