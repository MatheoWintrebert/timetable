{% extends 'base.html.twig' %}

{% block title %}
  Connexion - EDT Manager
{% endblock %}

{% block body %}
  <section class="auth-section">
    <div class="container-fluid-custom">
      <div class="auth-content">
        <!-- C√¥t√© gauche - Informations -->
        <div class="auth-info">
          <div class="auth-info-content">
            <div class="brand-section">
              <div class="brand-icon">üìÖ</div>
              <h1 class="brand-title">EDT Manager</h1>
              <p class="brand-subtitle">Votre solution intelligente pour les emplois du temps</p>
            </div>
            
            <div class="features-list">
              <div class="feature-item">
                <div class="feature-icon">‚ö°</div>
                <div class="feature-text">
                  <strong>G√©n√©ration automatique</strong><br>
                  Cr√©ez des emplois du temps optimis√©s en quelques secondes
                </div>
              </div>
              <div class="feature-item">
                <div class="feature-icon">üéØ</div>
                <div class="feature-text">
                  <strong>Gestion intelligente</strong><br>
                  Respecte les contraintes et pr√©f√©rences automatiquement
                </div>
              </div>
              <div class="feature-item">
                <div class="feature-icon">üì±</div>
                <div class="feature-text">
                  <strong>Interface moderne</strong><br>
                  Design responsive et intuitif sur tous les appareils
                </div>
              </div>
            </div>

          </div>
        </div>

        <!-- C√¥t√© droit - Formulaire -->
        <div class="auth-form-section">
          <div class="form-wrapper">
            <!-- En-t√™te du formulaire -->
            <header class="form-header">
              <div class="form-icon">üîê</div>
              <h2 class="form-title">Connexion</h2>
              <p class="form-subtitle">Acc√©dez √† votre espace personnel</p>
            </header>

            <!-- Messages flash et erreurs -->
            {% if error %}
              <div class="alert alert-danger">
                <div class="alert-icon">‚ö†Ô∏è</div>
                <div class="alert-content">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
              </div>
            {% endif %}

            {% if app.user %}
              <div class="alert alert-info">
                <div class="alert-icon">‚ÑπÔ∏è</div>
                <div class="alert-content">
                  Vous √™tes connect√© en tant que <strong>{{ app.user.userIdentifier }}</strong><br>
                  <a href="{{ path('app_logout') }}" class="alert-link">Se d√©connecter</a>
                </div>
              </div>
            {% endif %}

            <!-- Formulaire -->
            <form method="post" class="login-form">
              <div class="form-group">
                <div class="input-wrapper">
                  <div class="input-icon">üìß</div>
                  <label for="inputEmail" class="form-label">Adresse email</label>
                  <input type="email" 
                         value="{{ last_username }}" 
                         name="email" 
                         id="inputEmail" 
                         class="form-input" 
                         placeholder="votre.email@exemple.com"
                         autocomplete="email" 
                         required 
                         autofocus>
                </div>
              </div>

              <div class="form-group">
                <div class="input-wrapper">
                  <div class="input-icon">üîí</div>
                  <label for="inputPassword" class="form-label">Mot de passe</label>
                  <input type="password" 
                         name="password" 
                         id="inputPassword" 
                         class="form-input" 
                         placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                         autocomplete="current-password" 
                         required>
                </div>
              </div>

              <div class="form-group">
                <label class="custom-checkbox">
                  <input type="checkbox" name="_remember_me">
                  <span class="checkmark">‚úì</span>
