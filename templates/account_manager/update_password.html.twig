<turbo-frame id="account_tray">
  <section class="container">
    <div class="password-form-wrapper rounded shadow-lg">
      <!-- En-t√™te du formulaire -->
      <header class="form-header">
        <div class="form-icon">üîí</div>
        <h1 class="form-title">Changer le mot de passe</h1>
        <p class="form-subtitle">S√©curisez votre compte avec un nouveau mot de passe</p>
      </header>

      <!-- Messages flash -->
      {% for message in app.flashes('error') %}
        <div class="custom-alert custom-alert-danger">
          <div class="alert-icon">‚ö†Ô∏è</div>
          <div class="alert-content">{{ message }}</div>
        </div>
      {% endfor %}

      {% for message in app.flashes('success') %}
        <div class="custom-alert custom-alert-success">
          <div class="alert-icon">‚úÖ</div>
          <div class="alert-content">{{ message }}</div>
        </div>
      {% endfor %}

      <!-- Formulaire -->
      {{ form_start(form, {'attr': {'class': 'password-form'}}) }}
        <div class="form-group">
          <div class="input-wrapper">
            {{ form_label(form.currentPassword, null, {'attr': {'class': 'custom-label'}}) }}
            <div class="input-container">
              <span class="input-icon">üîê</span>
              {{ form_widget(form.currentPassword, {'attr': {'class': 'custom-input', 'placeholder': 'Entrez votre mot de passe actuel'}}) }}
            </div>
            {{ form_errors(form.currentPassword, {'attr': {'class': 'custom-error'}}) }}
          </div>
        </div>

        <div class="form-group">
          <div class="input-wrapper">
            {{ form_label(form.newPassword, null, {'attr': {'class': 'custom-label'}}) }}
            <div class="input-container">
              <span class="input-icon">üÜï</span>
              {{ form_widget(form.newPassword, {'attr': {'class': 'custom-input', 'placeholder': 'Entrez votre nouveau mot de passe'}}) }}
            </div>
            {{ form_errors(form.newPassword, {'attr': {'class': 'custom-error'}}) }}
          </div>
        </div>

        <div class="form-group">
          <div class="input-wrapper">
            {{ form_label(form.confirmPassword, null, {'attr': {'class': 'custom-label'}}) }}
            <div class="input-container">
              <span class="input-icon">‚úîÔ∏è</span>
              {{ form_widget(form.confirmPassword, {'attr': {'class': 'custom-input', 'placeholder': 'Confirmez votre nouveau mot de passe'}}) }}
            </div>
            {{ form_errors(form.confirmPassword, {'attr': {'class': 'custom-error'}}) }}
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="custom-btn custom-btn-primary">
            <span class="btn-icon">üîÑ</span>
            Mettre √† jour le mot de passe
          </button>
        </div>

      {{ form_end(form) }}
    </div>
  </section>

  <style>
    /* Variables de couleurs */
    :root {
      --primary-dark: #01172F;
      --accent-blue: #08A4BD;
      --title-green: #00635D;
      --secondary-purple: #3B1F2B;
      --table-dark: #181A1B;
    }

    /* Conteneur principal du formulaire */
    .password-form-wrapper {
      background-color: var(--table-dark);
      border: 2px solid var(--title-green);
      padding: 2.5rem;
      margin: 1rem 0;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    /* En-t√™te du formulaire */
    .form-header {
      text-align: center;
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid var(--title-green);
    }

    .form-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .form-title {
      color: var(--accent-blue);
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .form-subtitle {
      color: #ffffff;
      font-size: 1rem;
      opacity: 0.8;
      margin: 0;
    }

    /* Formulaire */
    .password-form {
      width: 100%;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .input-wrapper {
      width: 100%;
    }

    /* Labels personnalis√©s */
    .custom-label {
      color: var(--title-green) !important;
      font-weight: 600 !important;
      margin-bottom: 0.5rem !important;
      display: block !important;
      font-size: 1rem !important;
    }

    /* Container des inputs */
    .input-container {
      position: relative;
      display: flex;
      align-items: center;
    }

    .input-icon {
      position: absolute;
      left: 12px;
      z-index: 2;
      font-size: 1.1rem;
    }

    /* Inputs personnalis√©s */
    .custom-input {
      width: 100% !important;
      padding: 12px 12px 12px 45px !important;
      background-color: #2a2d2f !important;
      border: 2px solid #3a3d3f !important;
      border-radius: 8px !important;
      color: #ffffff !important;
      font-size: 1rem !important;
      transition: all 0.3s ease !important;
    }

    .custom-input:focus {
      outline: none !important;
      border-color: var(--accent-blue) !important;
      box-shadow: 0 0 0 3px rgba(8, 164, 189, 0.2) !important;
      background-color: #323538 !important;
    }

    .custom-input::placeholder {
      color: #888 !important;
    }

    /* Messages d'erreur */
    .custom-error {
      color: #ff6b6b !important;
      font-size: 0.875rem !important;
      margin-top: 0.5rem !important;
      display: block !important;
    }

    /* Alertes personnalis√©es */
    .custom-alert {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 1rem 1.25rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      font-weight: 500;
    }

    .custom-alert-danger {
      background-color: rgba(220, 53, 69, 0.1);
      border: 2px solid #dc3545;
      color: #ff6b6b;
    }

    .custom-alert-success {
      background-color: rgba(40, 167, 69, 0.1);
      border: 2px solid #28a745;
      color: #4caf50;
    }

    .alert-icon {
      font-size: 1.25rem;
      flex-shrink: 0;
    }

    .alert-content {
      flex: 1;
    }

    /* Actions du formulaire */
    .form-actions {
      margin-top: 2rem;
      text-align: center;
    }

    /* Bouton personnalis√© */
    .custom-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 1rem 2rem;
      border: 2px solid;
      border-radius: 8px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s ease;
      cursor: pointer;
      font-size: 1.1rem;
      background: none;
    }

    .custom-btn-primary {
      background-color: var(--accent-blue);
      border-color: var(--accent-blue);
      color: white;
    }

    .custom-btn-primary:hover {
      background-color: var(--title-green);
      border-color: var(--title-green);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(0, 99, 93, 0.3);
    }

    .custom-btn-primary:active {
      transform: translateY(0);
    }

    .btn-icon {
      font-size: 1rem;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .password-form-wrapper {
        padding: 1.5rem;
        margin: 0.5rem;
      }

      .form-title {
        font-size: 1.6rem;
      }

      .custom-btn {
        width: 100%;
        padding: 1rem 1.5rem;
      }
    }

    /* Am√©lioration de l'ombre */
    .shadow-lg {
      box-shadow: 0 10px 25px rgba(1, 23, 47, 0.25) !important;
    }

    /* Fix pour les erreurs de formulaire Symfony */
    .form-error-list {
      color: #ff6b6b !important;
      font-size: 0.875rem !important;
      margin-top: 0.5rem !important;
      list-style: none !important;
      padding: 0 !important;
    }

    .form-error-list li {
      margin-bottom: 0.25rem !important;
    }
  </style>
</turbo-frame>