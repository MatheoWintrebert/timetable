{% extends 'base.html.twig' %}

{% block title %}
  Mon Compte
{% endblock %}

{% block body %}
  {{ parent() }}
  <div class="container my-4">
    <div class="profile-loading-container rounded shadow-lg">
      <turbo-frame id="account_tray" src="{{ path('account_manager_show', { nomOnglet: app.session.get('account_active') ? app.session.get('account_active') : 'affichage' }) }}">
        <div class="text-center py-5">
          <div class="loading-spinner mb-3"></div>
          <p class="loading-text">Chargement de votre profil...</p>
        </div>
      </turbo-frame>
    </div>
  </div>

  <style>
    /* Variables de couleurs */
    :root {
      --primary-dark: #01172F;
      --accent-blue: #08A4BD;
      --title-green: #00635D;
      --secondary-purple: #3B1F2B;
      --table-dark: #181A1B;
    }

    .profile-loading-container {
      background-color: var(--table-dark);
      border: 2px solid var(--title-green);
      min-height: 200px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .loading-text {
      color: var(--accent-blue);
      font-size: 1.1rem;
      font-weight: 500;
      margin: 0;
    }

    .loading-spinner {
      width: 40px;
      height: 40px;
      border: 4px solid rgba(8, 164, 189, 0.2);
      border-top: 4px solid var(--accent-blue);
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .shadow-lg {
      box-shadow: 0 10px 25px rgba(1, 23, 47, 0.25) !important;
    }
  </style>
{% endblock %}