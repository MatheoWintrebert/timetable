  <style>
    /* R√©utilisation des styles de login avec adaptations */
    .auth-section {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: var(--spacing-xl) 0;
      background: linear-gradient(135deg, var(--primary-dark) 0%, var(--secondary-purple) 50%, var(--title-green) 100%);
      position: relative;
      overflow: hidden;
    }

    .auth-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(circle at 20% 20%, rgba(8, 164, 189, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(0, 99, 93, 0.1) 0%, transparent 50%);
      pointer-events: none;
    }

    .auth-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-xxl);
      align-items: center;
      max-width: 1400px;
      margin: 0 auto;
      position: relative;
      z-index: 1;
    }

    /* ===== C√îT√â INFORMATIONS ===== */
    .auth-info {
      padding: var(--spacing-xl);
    }

    .auth-info-content {
      max-width: 500px;
    }

    .brand-section {
      text-align: center;
      margin-bottom: var(--spacing-xxl);
    }

    .brand-icon {
      font-size: 4rem;
      margin-bottom: var(--spacing-md);
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }

    .brand-title {
      font-size: 3rem;
      font-weight: 700;
      color: var(--accent-blue);
      margin-bottom: var(--spacing-sm);
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .brand-subtitle {
      font-size: 1.2rem;
      color: var(--text-muted);
      margin-bottom: var(--spacing-xl);
    }

    .benefits-list {
      margin-bottom: var(--spacing-xxl);
    }

    .benefit-item {
      display: flex;
      align-items: flex-start;
      gap: var(--spacing-md);
      margin-bottom: var(--spacing-lg);
      padding: var(--spacing-md);
      background: rgba(255, 255, 255, 0.03);
      border-radius: var(--border-radius-md);
      border-left: 3px solid var(--success-green);
      transition: all var(--transition-normal);
    }

    .benefit-item:hover {
      background: rgba(255, 255, 255, 0.05);
      transform: translateX(5px);
    }

    .benefit-icon {
      font-size: 1.5rem;
      flex-shrink: 0;
      margin-top: var(--spacing-xs);
    }

    .benefit-text {
      color: var(--text-light);
      line-height: 1.5;
    }

    .stats-showcase {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-md);
      padding: var(--spacing-xl);
      background: var(--card-bg);
      border: 2px solid var(--input-border);
      border-radius: var(--border-radius-xl);
      box-shadow: var(--shadow-lg);
    }

    .stat-item {
      text-align: center;
      padding: var(--spacing-md);
    }

    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      color: var(--accent-blue);
      display: block;
      margin-bottom: var(--spacing-sm);
    }

    .stat-label {
      color: var(--text-muted);
      font-weight: 500;
      font-size: 0.9rem;
    }

    /* ===== C√îT√â FORMULAIRE ===== */
    .auth-form-section {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: var(--spacing-xl);
    }

    .form-wrapper {
      width: 100%;
      max-width: 450px;
      background: var(--form-dark);
      border: 2px solid var(--title-green);
      border-radius: var(--border-radius-xl);
      padding: var(--spacing-xxl);
      box-shadow: var(--shadow-xl);
      animation: slideInRight 0.6s ease-out;
      backdrop-filter: blur(10px);
      position: relative;
    }

    .form-wrapper::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(8, 164, 189, 0.05) 0%, rgba(0, 99, 93, 0.05) 100%);
