      padding: var(--spacing-lg) var(--spacing-xl);
      font-size: 1.1rem;
    }

    /* ===== INDICATEUR DE FORCE DU MOT DE PASSE ===== */
    .password-strength {
      margin-top: var(--spacing-sm);
    }

    .strength-bar {
      width: 100%;
      height: 4px;
      background-color: var(--input-border);
      border-radius: 2px;
      overflow: hidden;
      margin-bottom: var(--spacing-xs);
    }

    .strength-fill {
      height: 100%;
      background-color: var(--danger-red);
      width: 0%;
      transition: all var(--transition-normal);
      border-radius: 2px;
    }

    .strength-text {
      font-size: 0.8rem;
      color: var(--text-muted);
      text-align: center;
    }

    .strength-weak { background-color: var(--danger-red); }
    .strength-medium { background-color: var(--warning-orange); }
    .strength-strong { background-color: var(--success-green); }

    /* ===== TEXTE DES CONDITIONS ===== */
    .terms-text {
      text-align: center;
      font-size: 0.8rem;
      color: var(--text-muted);
      margin-top: var(--spacing-md);
      line-height: 1.4;
    }

    .terms-link {
      color: var(--accent-blue);
      text-decoration: none;
      transition: color var(--transition-normal);
    }

    .terms-link:hover {
      color: var(--title-green);
      text-decoration: underline;
    }

    /* ===== RESPONSIVE ===== */
    @media (max-width: 1200px) {
      .auth-content {
        grid-template-columns: 1fr;
        gap: var(--spacing-xl);
        text-align: center;
      }

      .brand-title {
        font-size: 2.5rem;
      }

      .stats-showcase {
        max-width: 400px;
        margin: 0 auto;
      }
    }

    @media (max-width: 768px) {
      .form-wrapper {
        margin: 0 var(--spacing-md);
        padding: var(--spacing-xl);
      }

      .brand-title {
        font-size: 2rem;
      }

      .stats-showcase {
        grid-template-columns: 1fr;
      }

      .benefit-item {
        flex-direction: column;
        text-align: center;
      }
    }

    @media (max-width: 480px) {
      .form-wrapper {
        margin: 0 var(--spacing-sm);
        padding: var(--spacing-lg);
      }

      .brand-title {
        font-size: 1.75rem;
      }
    }

    /* ===== ANIMATIONS ===== */
    @keyframes slideInRight {
      from {
        opacity: 0;
        transform: translateX(50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .benefit-item {
      animation: fadeInLeft 0.6s ease-out;
    }

    .benefit-item:nth-child(1) { animation-delay: 0.1s; }
    .benefit-item:nth-child(2) { animation-delay: 0.2s; }
    .benefit-item:nth-child(3) { animation-delay: 0.3s; }

    @keyframes fadeInLeft {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const passwordInput = document.querySelector('input[type="password"]');
      const strengthFill = document.getElementById('strengthFill');
      const strengthText = document.getElementById('strengthText');

      if (passwordInput && strengthFill && strengthText) {
        passwordInput.addEventListener('input', function() {
          const password = this.value;
          const strength = calculatePasswordStrength(password);
          
          updateStrengthIndicator(strength, strengthFill, strengthText);
        });
      }

      function calculatePasswordStrength(password) {
        if (password.length === 0) return { score: 0, text: 'Tapez votre mot de passe' };
        
        let score = 0;
        let feedback = [];

        // Longueur
        if (password.length >= 8) score += 25;
        else feedback.push('8 caract√®res min');

        // Minuscules et majuscules
        if (/[a-z]/.test(password) && /[A-Z]/.test(password)) score += 25;
        else feedback.push('majuscules et minuscules');

        // Chiffres
        if (/\d/.test(password)) score += 25;
        else feedback.push('des chiffres');

        // Caract√®res sp√©ciaux
        if (/[^A-Za-z0-9]/.test(password)) score += 25;
        else feedback.push('des caract√®res sp√©ciaux');

        let text = '';
        if (score < 50) text = 'Faible - Ajoutez: ' + feedback.join(', ');
        else if (score < 75) text = 'Moyen - Am√©liorable';
        else if (score < 100) text = 'Bon - Presque parfait';
        else text = 'Excellent - Mot de passe s√©curis√©';

        return { score, text };
      }

      function updateStrengthIndicator(strength, fill, text) {
        fill.style.width = strength.score + '%';
        text.textContent = strength.text;

        fill.className = 'strength-fill';
        if (strength.score < 50) fill.classList.add('strength-weak');
        else if (strength.score < 75) fill.classList.add('strength-medium');
        else fill.classList.add('strength-strong');
      }
    });
  </script>
{% endblock %}