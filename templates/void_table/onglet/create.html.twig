  <style>
    /* Variables de couleurs */
    :root {
      --primary-dark: #01172F;
      --accent-blue: #08A4BD;
      --title-green: #00635D;
      --secondary-purple: #3B1F2B;
      --form-dark: #181A1B;
      --success-green: #28a745;
      --warning-orange: #ffc107;
      --danger-red: #dc3545;
      --info-blue: #17a2b8;
      --input-bg: #2a2d2f;
      --input-border: #3a3d3f;
      --text-light: #ffffff;
      --text-muted: #b8bcc0;
    }

    /* Conteneur principal */
    .create-schedule-container {
      max-width: 800px;
      margin: 0 auto;
      color: var(--text-light);
    }

    /* En-t√™te du formulaire */
    .form-header {
      text-align: center;
      margin-bottom: 2.5rem;
      padding-bottom: 1.5rem;
      border-bottom: 2px solid var(--title-green);
    }

    .form-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      opacity: 0.9;
    }

    .form-title {
      color: var(--accent-blue);
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .form-subtitle {
      color: var(--text-muted);
      font-size: 1rem;
      margin: 0;
      line-height: 1.4;
    }

    /* Alertes */
    .alert {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      padding: 1rem 1.5rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      font-weight: 500;
      border: 2px solid;
    }

    .alert-success {
      background-color: rgba(40, 167, 69, 0.1);
      border-color: var(--success-green);
      color: var(--success-green);
    }

    .alert-error {
      background-color: rgba(220, 53, 69, 0.1);
      border-color: var(--danger-red);
      color: var(--danger-red);
    }

    .alert-info {
      background-color: rgba(23, 162, 184, 0.1);
      border-color: var(--info-blue);
      color: var(--info-blue);
    }

    .alert-icon {
      font-size: 1.2rem;
      margin-top: 0.1rem;
    }

    .alert-content {
      flex: 1;
    }

    /* Formulaire */
    .schedule-form {
      width: 100%;
    }

    /* Sections du formulaire */
    .form-section {
      margin-bottom: 2.5rem;
      padding: 1.5rem;
      background-color: rgba(42, 45, 47, 0.3);
      border-radius: 12px;
      border: 1px solid var(--input-border);
    }

    .section-title {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      color: var(--accent-blue);
      font-size: 1.3rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      padding-bottom: 0.75rem;
      border-bottom: 1px solid var(--input-border);
    }

    .section-icon {
      font-size: 1.4rem;
    }

    /* Lignes de formulaire */
    .form-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    /* Groupes de formulaire */
    .form-group {
      margin-bottom: 1rem;
    }

    .input-wrapper {
      position: relative;
    }

    .input-icon {
      position: absolute;
      left: 1rem;
      top: 3.2rem;
      font-size: 1.1rem;
      color: var(--accent-blue);
      z-index: 2;
      pointer-events: none;
    }

    /* Labels */
    .form-label {
